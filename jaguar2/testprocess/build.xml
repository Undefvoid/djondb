<project name="testproject" default="default" basedir=".">
    <target name="default" depends="build">
    </target>
        
    <target name="init">
        <copy todir="build">
            <fileset dir="src">
                <include name="**/**" />
            </fileset>
        </copy>
    </target>
    
    <target name="clean" depends="init">
        <delete dir="dist" />
    </target>
    
    <target name="build" depends="init">
        <mkdir dir="dist" />
        <jar basedir="src" destfile="dist/testprocess.jar">
            <fileset dir="src">
                <exclude name="**/.svn/**" />
                <include name="**/**" />
            </fileset>
        </jar>
    </target>
</project>
